# Get list of staged files
staged_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx|json|css|scss|md)$')

if [ -n "$staged_files" ]; then
  echo "Running Prettier on staged files..."
  if ! echo "$staged_files" | xargs npx prettier --write; then
    echo "Prettier formatting failed. Please fix errors and try again."
    exit 1
  fi

  # Re-stage the formatted files
  echo "$staged_files" | xargs git add

  echo "Prettier formatting applied to staged files."
fi
