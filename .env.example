# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Weather API Keys
# Open-Meteo (no API key required - free forever)

# Visual Crossing API Key (Optional - for premium weather data)
# Get your free API key at: https://www.visualcrossing.com/weather-api
# Free tier: 1000 calls/day
NEXT_PUBLIC_VISUAL_CROSSING_API_KEY=your_visual_crossing_api_key_here

# Weatherbit Agriculture API Key (Optional - for agriculture-specific data)
# Get your free API key at: https://www.weatherbit.io/account/create
# Free tier: 500 calls/day
# Features: Soil temperature, soil moisture, 8-day ag forecasts
NEXT_PUBLIC_WEATHERBIT_API_KEY=your_weatherbit_api_key_here

# Tomorrow.io API Key (Optional - for hyper-accurate weather)
# Get your free API key at: https://www.tomorrow.io/weather-api/
# Free tier available
# Features: Minute-by-minute forecasts, 80+ data fields, soil data, direct ETo
NEXT_PUBLIC_TOMORROW_IO_API_KEY=your_tomorrow_io_api_key_here

# Other API Keys
NEXT_PUBLIC_WEATHER_API_KEY=your_weatherapi_key_here
